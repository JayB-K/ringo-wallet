<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".acticites.PasswordActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/font_15_white"
            android:text="@string/title_create_restore"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
                android:id="@+id/layer_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/space_12"
                android:paddingBottom="@dimen/space_12"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_lock"
                    android:layout_width="@dimen/space_50"
                    android:layout_height="@dimen/space_50"
                    android:src="@drawable/password_img" />
                <TextView
                    android:id="@+id/tv_password_msg0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_8"
                    android:gravity="center"
                    style="@style/font_15_black1"
                    android:text="@string/msg_password_init"/>
                <TextView
                    android:id="@+id/tv_password_msg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_4"
                    android:gravity="center"
                    style="@style/font_12_error_red"
                    android:text="@string/msg_password_warning"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_36"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12">
                    <ImageView
                        android:id="@+id/img_circle0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_pass_gr"/>
                    <ImageView
                        android:id="@+id/img_circle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_16"
                        android:background="@drawable/ic_pass_gr"/>
                    <ImageView
                        android:id="@+id/img_circle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_16"
                        android:background="@drawable/ic_pass_gr"/>
                    <ImageView
                        android:id="@+id/img_circle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_16"
                        android:background="@drawable/ic_pass_gr"/>
                    <ImageView
                        android:layout_width="@dimen/space_16"
                        android:layout_height="@dimen/space_16"
                        android:layout_marginStart="@dimen/space_12"
                        android:background="@drawable/ic_plus"/>
                    <ImageView
                        android:id="@+id/img_circle4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_12"
                        android:background="@drawable/ic_pass_gr"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <com.aurelhubert.ahbottomnavigation.AHBottomNavigationViewPager
                android:id="@+id/keyboard_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>