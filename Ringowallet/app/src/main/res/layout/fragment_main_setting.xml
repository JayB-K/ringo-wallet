                    android:layout_height="1dp"
                    android:background="@color/color_gray0"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/space_20"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/set_licence"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_54"
                android:background="@drawable/white_box_ripple"
                android:clickable="true">
                <TextView
                    android:id="@+id/set_licence_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_20"
                    style="@style/font_14_black1"
                    android:text="@string/str_opensource"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_arrow_next"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/space_12"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_gray0"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>