<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/font_15_white"
            android:text="@string/str_currency"/>
    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/tool_bar">

        <LinearLayout
            android:id="@+id/mnemonic_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_above="@+id/control_layer">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mnemonics_img"/>

            <TextView
                android:id="@+id/tv_check_mnemonic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_28"
                android:layout_marginRight="@dimen/space_28"
                android:layout_marginTop="@dimen/space_12"
                style="@style/font_14_error_red"
                android:text="@string/msg_check_mnemonic"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/space_16"
                android:paddingLeft="@dimen/space_28"
                android:paddingRight="@dimen/space_28"
                android:paddingBottom="@dimen/space_12"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/mnemonic_0"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/font_12_gray2"
                        android:background="@drawable/roundbox_word_normal"/>
                    <TextView
                        android:id="@+id/mnemonic_1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/font_12_gray2"
                        android:layout_marginLeft="@dimen/space_12"
                        android:background="@drawable/roundbox_word_normal"/>
                    <TextView
                        android:id="@+id/mnemonic_2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/font_12_gray2"
                        android:layout_marginLeft="@dimen/space_12"
                        android:background="@drawable/roundbox_word_normal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12">
                    <TextView
                        android:id="@+id/mnemonic_3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/font_12_gray2"
                        android:background="@drawable/roundbox_word_normal"/>
                    <TextView
                        android:id="@+id/mnemonic_4"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/font_12_gray2"
                        android:layout_marginLeft="@dimen/space_12"
                        android:background="@drawable/roundbox_word_normal"/>
                    <TextView
                        android:id="@+id/mnemonic_5"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/font_12_gray2"
                        android:layout_marginLeft="@dimen/space_12"
                        android:background="@drawable/roundbox_word_normal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12">
                    <TextView
                        android:id="@+id/mnemonic_6"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/font_12_gray2"
                        android:background="@drawable/roundbox_word_normal"/>
                    <TextView
                        android:id="@+id/mnemonic_7"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/font_12_gray2"
                        android:layout_marginLeft="@dimen/space_12"
                        android:background="@drawable/roundbox_word_normal"/>
                    <TextView
                        android:id="@+id/mnemonic_8"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/font_12_gray2"
                        android:layout_marginLeft="@dimen/space_12"
                        android:background="@drawable/roundbox_word_normal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12">
                    <TextView
                        android:id="@+id/mnemonic_9"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/font_12_gray2"
                        android:background="@drawable/roundbox_word_normal"/>
                    <TextView
                        android:id="@+id/mnemonic_10"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/font_12_gray2"
                        android:layout_marginLeft="@dimen/space_12"
                        android:background="@drawable/roundbox_word_normal"/>
                    <TextView
                        android:id="@+id/mnemonic_11"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_36"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/font_12_gray2"
                        android:layout_marginLeft="@dimen/space_12"
                        android:background="@drawable/roundbox_word_normal"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/key_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_above="@+id/control_layer"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/key_img"/>
            <TextView
                android:id="@+id/tv_check_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_28"
                android:layout_marginRight="@dimen/space_28"
                android:layout_marginTop="@dimen/space_12"
                style="@style/font_14_error_red"
                android:text="@string/msg_check_key"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12"
                android:layout_marginLeft="@dimen/space_28"
                android:layout_marginRight="@dimen/space_28"
                android:layout_marginBottom="@dimen/space_12"
                android:padding="@dimen/space_12"
                android:orientation="vertical"
                android:background="@drawable/input_box_gray2">
                <TextView
                    android:id="@+id/tv_pkey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/font_14_black1"
                    android:text="sefwhjfwebfc.kjebfkewjbfkewbfk.esbjf.sefbskjf"/>
                <TextView
                    android:id="@+id/tv_path"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_8"
                    android:layout_marginBottom="@dimen/space_8"
                    android:gravity="left"
                    style="@style/font_12_gray2"
                    android:text="M/4/4/3/2/3"/>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/control_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_28"
            android:layout_marginRight="@dimen/space_28"
            android:layout_marginBottom="@dimen/space_28"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/space_14"
                android:minHeight="@dimen/space_50"
                android:background="@drawable/btn_white_rect_round"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/btn_text_color2"
                android:text="@string/str_delete"
                android:textAllCaps="false"
                android:outlineProvider="none"/>

            <Button
                android:id="@+id/btn_copy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="@dimen/space_50"
                android:background="@drawable/btn_black_rect_round"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/btn_text_color"
                android:text="@string/str_copy"
                android:textAllCaps="false"
                android:outlineProvider="none"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>