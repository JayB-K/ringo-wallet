<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/font_15_white"
            android:text="@string/str_currency"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/tool_bar">
        <RelativeLayout
            android:id="@+id/set_currency_usd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_54"
            android:background="@drawable/white_box_ripple"
            android:clickable="true">
            <TextView
                android:id="@+id/currency_usd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_20"
                style="@style/font_14_black1"
                android:text="@string/str_usd"/>
            <ImageView
                android:id="@+id/currency_usd_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_checkbox_unchecked"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_12"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray0"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/space_20"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/set_currency_krw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_54"
            android:background="@drawable/white_box_ripple"
            android:clickable="true">
            <TextView
                android:id="@+id/currency_krw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_20"
                style="@style/font_14_black1"
                android:text="@string/str_krw"/>
            <ImageView
                android:id="@+id/currency_krw_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_checkbox_unchecked"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_12"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray0"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>