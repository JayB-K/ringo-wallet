<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/space_28">
        <TextView
            android:id="@+id/tv_generate_msg0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/font_15_black1"
            android:text="@string/msg_generate_msg01"/>

        <TextView
            android:id="@+id/tv_generate_msg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_18"
            style="@style/font_12_gray1"
            android:lineSpacingExtra="@dimen/space_4"
            android:text="@string/msg_generate_msg02"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="@dimen/space_18"
            android:background="@drawable/input_box_white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_mnemonic_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/font_12_gray2"/>
                <TextView
                    android:id="@+id/tv_mnemonic_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/font_12_gray2"/>
                <TextView
                    android:id="@+id/tv_mnemonic_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/font_12_gray2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_mnemonic_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/font_12_gray2"/>
                <TextView
                    android:id="@+id/tv_mnemonic_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/font_12_gray2"/>
                <TextView
                    android:id="@+id/tv_mnemonic_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/font_12_gray2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_mnemonic_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/font_12_gray2"/>
                <TextView
                    android:id="@+id/tv_mnemonic_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/font_12_gray2"/>
                <TextView
                    android:id="@+id/tv_mnemonic_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/font_12_gray2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_mnemonic_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/font_12_gray2"/>
                <TextView
                    android:id="@+id/tv_mnemonic_10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/font_12_gray2"/>
                <TextView
                    android:id="@+id/tv_mnemonic_11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/font_12_gray2"/>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/btn_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_18"
            android:orientation="horizontal"
            android:padding="@dimen/space_8"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_file_copy_ic"/>
                <TextView
                    android:id="@+id/tv_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_4"
                    style="@style/font_12_primary"
                    android:text="@string/str_copy" />

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_28"
        android:layout_marginRight="@dimen/space_28"
        android:layout_marginBottom="@dimen/space_28"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="@dimen/space_50"
            android:background="@drawable/btn_white_rect_round"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/btn_text_color2"
            android:text="@string/str_refresh"
            android:textAllCaps="false"
            android:outlineProvider="none"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/space_14"
            android:minHeight="@dimen/space_50"
            android:background="@drawable/btn_black_rect_round"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/btn_text_color"
            android:text="@string/str_next"
            android:textAllCaps="false"
            android:outlineProvider="none"/>

    </LinearLayout>



</RelativeLayout>