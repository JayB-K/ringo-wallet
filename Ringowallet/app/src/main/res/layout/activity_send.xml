                        android:id="@+id/gasPriceSeekTap1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/font_11_gray2"
                        android:text="Double"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/gasPriceSeekTap2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
