                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:minHeight="@dimen/space_32"
                        android:gravity="center"
                        android:background="@drawable/btn_gray2_rect_round"
                        android:clickable="true"
                        style="?android:attr/borderlessButtonStyle">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_ic_paste"/>
                        <TextView
                            android:id="@+id/paste_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_4"
                            style="@style/font_12_primary"
                            android:text="@string/str_paste" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_qr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/space_12"
                        android:orientation="horizontal"
                        android:minHeight="@dimen/space_32"
                        android:gravity="center"
                        android:background="@drawable/btn_gray2_rect_round"
                        android:clickable="true"
                        style="?android:attr/borderlessButtonStyle">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_ic_rq"/>
                        <TextView
                            android:id="@+id/qr_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_4"
                            style="@style/font_12_primary"
                            android:text="@string/str_qrcode" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_recent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/space_12"
                        android:orientation="horizontal"
                        android:minHeight="@dimen/space_32"
                        android:gravity="center"
                        android:background="@drawable/btn_gray2_rect_round"
                        android:clickable="true"
                        style="?android:attr/borderlessButtonStyle"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_ic_recent"/>
                        <TextView
                            android:id="@+id/recent_tv"
