                        android:paddingEnd="@dimen/space_60"/>
                    <TextView
                        android:id="@+id/et_amount_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/space_40"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="@dimen/space_16"
                        android:paddingRight="@dimen/space_16"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        style="@style/font_12_primary"
                        android:text="@string/str_clear"
                        android:clickable="true"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/amount_control_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_add_amount_0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="@dimen/space_36"
                        android:background="@drawable/btn_gray2_rect_round"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/colorPrimary"
                        android:text="+ 1"
                        android:textAllCaps="false"
                        style="?android:attr/borderlessButtonStyle"/>
                    <Button
                        android:id="@+id/btn_add_amount_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/space_6"
                        android:minHeight="@dimen/space_36"
                        android:background="@drawable/btn_gray2_rect_round"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/colorPrimary"
                        android:text="+ 10"
                        android:textAllCaps="false"
                        style="?android:attr/borderlessButtonStyle"/>
                    <Button
                        android:id="@+id/btn_add_amount_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/space_6"
                        android:minHeight="@dimen/space_36"
                        android:background="@drawable/btn_gray2_rect_round"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/colorPrimary"
                        android:text="+ 25%"
                        android:textAllCaps="false"
                        style="?android:attr/borderlessButtonStyle"/>
                    <Button
                        android:id="@+id/btn_add_amount_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/space_6"
                        android:minHeight="@dimen/space_36"
                        android:background="@drawable/btn_gray2_rect_round"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/colorPrimary"
                        android:text="+ 50%"
                        android:textAllCaps="false"
                        style="?android:attr/borderlessButtonStyle"/>
                    <Button
                        android:id="@+id/btn_add_amount_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/space_6"
                        android:minHeight="@dimen/space_36"
                        android:background="@drawable/btn_gray2_rect_round"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/colorPrimary"
                        android:text="MAX"
                        android:textAllCaps="false"
                        style="?android:attr/borderlessButtonStyle"/>
