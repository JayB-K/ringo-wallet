                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_32"
                android:layout_marginBottom="@dimen/space_8">
                <TextView
                    android:id="@+id/gas_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_32"
                    style="@style/font_12_gray1"
                    android:text="Gas Price(Gwei)"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:background="@drawable/seekbar">
                    </LinearLayout>
                    <SeekBar
                        android:id="@+id/gas_price_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_18"
                        android:layout_marginRight="@dimen/space_18"
                        android:maxHeight="1dp"
                        android:splitTrack="false"
                        android:progress="2"
                        android:max="2"
                        android:progressDrawable="@drawable/send_fee_seekbar"
