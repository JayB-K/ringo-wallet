                    android:id="@+id/et_address_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:minHeight="@dimen/space_40"
                    android:hint="@string/str_recipient_address"
                    android:textColorHint="@color/color_font_gray2"
                    android:background="@drawable/input_box_white"
                    android:textCursorDrawable="@drawable/input_cursor"
                    android:inputType="textMultiLine"
                    style="@style/font_12_black1"/>

                <LinearLayout
                    android:id="@+id/address_control_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"
