<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:state_enabled="false">
        <shape  android:shape="rectangle">
            <solid android:color="@color/color_bg_gray2"/>
            <stroke
                android:color="@color/color_gray0"
                android:width="@dimen/space_1"/>
            <padding
                android:left="@dimen/space_8"
                android:top="@dimen/space_8"
                android:right="@dimen/space_8"
                android:bottom="@dimen/space_8" />
        </shape>
    </item>

    <item
        android:state_enabled="true"
        android:state_pressed="false">
        <shape  android:shape="rectangle">
            <solid android:color="@color/color_bg_gray2"/>
            <stroke
                android:color="@color/color_gray0"
                android:width="@dimen/space_1"/>
            <padding
                android:left="@dimen/space_8"
                android:top="@dimen/space_8"
                android:right="@dimen/space_8"
                android:bottom="@dimen/space_8" />
        </shape>
    </item>

    <item
        android:state_enabled="true"
        android:state_pressed="true">
        <shape  android:shape="rectangle">
            <solid android:color="@color/color_bg_gray2"/>
            <stroke
                android:color="@color/colorPrimary"
                android:width="@dimen/space_1"/>
            <padding
                android:left="@dimen/space_8"
                android:top="@dimen/space_8"
                android:right="@dimen/space_8"
                android:bottom="@dimen/space_8" />
        </shape>
    </item>


</selector>